<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.pyschologyApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorPrimary">@color/light_background</item>
        <item name="android:colorPrimaryDark">@color/background</item>
        <item name="colorOnPrimary">@color/green</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item><!--buttom bar color-->
        <item name="colorPrimaryDark">@color/grey</item><!--top bar color-->
        <item name="colorAccent">@color/blue</item><!--Unkown color-->
        <!--<item name="android:background">@color/green</item>-->
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/grey</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="TableTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="squares" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="background">@color/white</item>
        <item name="android:text">""</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toStartOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>

    </style>

</resources>