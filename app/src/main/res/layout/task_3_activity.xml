<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="5">


    <ImageView
        android:id="@+id/crossButton1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/small_cross"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textCl"
        app:layout_constraintEnd_toStartOf="@+id/controllXLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/crossButton3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/small_cross"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crossButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crossButton1" />

    <ImageView
        android:id="@+id/crossButton4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/small_cross"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/controllXLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controllXLocation" />

    <ImageView
        android:id="@+id/crossButton5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/small_cross"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/crossButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/controllXLocation"
        app:layout_constraintTop_toTopOf="@+id/crossButton4" />

    <ImageView
        android:id="@+id/crossButton2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/small_cross"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/crossButton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toEndOf="@+id/controllXLocation"
        app:layout_constraintTop_toTopOf="@+id/crossButton1"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/textCl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/controllXLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/CorrectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct: "
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@id/wrong_txt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/numCorrect"
            app:layout_constraintBottom_toTopOf="@id/WrongTimeView"/>

        <TextView
            android:id="@+id/numCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/CorrectTextView"
            app:layout_constraintEnd_toStartOf="@id/times1"
            app:layout_constraintStart_toEndOf="@id/CorrectTextView"
            app:layout_constraintTop_toTopOf="@id/CorrectTextView" />

        <TextView
            android:id="@+id/times1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Times"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/numCorrect"
            app:layout_constraintTop_toTopOf="@id/CorrectTextView"
            app:layout_constraintBottom_toBottomOf="@id/CorrectTextView"
            app:layout_constraintEnd_toEndOf="@id/wrong_txt"/>

        <TextView
            android:id="@+id/WrongTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong/Missed: "
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@id/CorrectTextView"
            app:layout_constraintTop_toBottomOf="@id/CorrectTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/wrong_txt" />

        <TextView
            android:id="@+id/wrong_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/WrongTimeView"
            app:layout_constraintTop_toTopOf="@id/WrongTimeView"
            app:layout_constraintBottom_toBottomOf="@id/WrongTimeView"
            app:layout_constraintEnd_toStartOf="@id/times2" />

        <TextView
            android:id="@+id/times2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Times"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/wrong_txt"
            app:layout_constraintTop_toTopOf="@id/WrongTimeView"
            app:layout_constraintBottom_toBottomOf="@id/WrongTimeView"
            app:layout_constraintEnd_toEndOf="@id/times1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background_wrong_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controllXLocation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/background_wrong_click"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCl">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/reactButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/medium_circle_no_background"
        android:text="React"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCl" />

</androidx.constraintlayout.widget.ConstraintLayout>