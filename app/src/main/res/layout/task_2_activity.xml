<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/blue_teal_background">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxesContraint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Box:"
            app:layout_constraintBottom_toTopOf="@+id/displayBox"
            app:layout_constraintStart_toStartOf="@+id/displayBox" />

        <TextView
            android:id="@+id/displayBox"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:autofillHints="Enter numbers in reverse"
            android:background="@drawable/rectangle_shape"
            android:gravity="center"
            android:text="Numbers will display here"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/AnswerBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer Box:"
            app:layout_constraintBottom_toTopOf="@id/AnswerBox"
            app:layout_constraintStart_toStartOf="@+id/AnswerBox" />

        <TextView
            android:id="@+id/AnswerBox"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:autofillHints="Enter numbers in reverse"
            android:background="@drawable/rectangle_shape"
            android:gravity="center"
            android:text="Your answer will appear here"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/displayBox" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonsBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/boxesContraint"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <Button
            android:id="@+id/Number1"
            style="@style/Task2Buttons"
            android:layout_marginStart="24dp"
            android:text="1"
            app:layout_constraintBottom_toTopOf="@id/Number3"
            app:layout_constraintEnd_toStartOf="@id/Number2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/Number2"
            style="@style/Task2Buttons"
            android:text="2"
            app:layout_constraintBottom_toTopOf="@id/Number4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/Number1"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/Number3"
            style="@style/Task2Buttons"
            android:layout_marginStart="24dp"
            android:text="3"
            app:layout_constraintBottom_toTopOf="@id/Number5"
            app:layout_constraintEnd_toStartOf="@id/Number4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Number1"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/Number4"
            style="@style/Task2Buttons"
            android:text="4"
            app:layout_constraintBottom_toTopOf="@id/Number6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/Number3"
            app:layout_constraintTop_toBottomOf="@id/Number2"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/Number5"
            style="@style/Task2Buttons"
            android:layout_marginStart="24dp"
            android:text="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/Number6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Number3"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/Number6"
            style="@style/Task2Buttons"
            android:text="6"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/Number5"
            app:layout_constraintTop_toBottomOf="@id/Number4"
            tools:visibility="invisible" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>